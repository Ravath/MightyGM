<UserControl x:Class="CinqAnneauxWpf.Fiches.FicheListeCompetences"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinqAnneauxWpf.Fiches"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <TextBlock DockPanel.Dock="Bottom"  FontSize="9.333"
                   Text="Les compétences suivies d'un * sont dégradantes\nLes compétences suivies d'un ^ sont nobles"/>
        <TreeView x:Name="xCompetenceTree" Background="{x:Null}"/>
    </DockPanel>
</UserControl>
