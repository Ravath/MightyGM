<UserControl x:Class="CinqAnneauxWpf.Fiches.FicheClan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinqAnneauxWpf.Fiches"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Grid.Row="0" FontSize="15" FontWeight="Bold" x:Name="xName"/>
        <TextBlock Grid.Row="1" x:Name="xDescription" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
    </StackPanel>
</UserControl>
