<UserControl x:Class="MightyGmWPF.GUIcore.DataModelInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MightyGmCtrl.GUIcore"
             mc:Ignorable="d" VerticalAlignment="Top">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding Model.Name}"/>
        <Button Click="Button_Click" HorizontalAlignment="Right">
            <TextBlock>Change</TextBlock>
        </Button>
    </StackPanel>
</UserControl>
